<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/four_bg_bit">
    
    
	<com.wbw.widget.shimmer.ShimmerFrameLayout
	    android:id="@+id/sf_imageview"
	    android:layout_height="wrap_content" 
	    android:layout_width="wrap_content"
	    android:layout_marginTop="20dp"
	    android:layout_marginLeft="35dp">
	    <ImageView android:layout_height="85dp"
	        android:layout_width="207dp"
	        android:src="@drawable/four_zi"
	        android:scaleType="fitCenter"/>
	    
	</com.wbw.widget.shimmer.ShimmerFrameLayout>
	
	
	<RelativeLayout android:layout_width="match_parent"
	    android:layout_height="250dp"
	 
	    android:id="@+id/rl_middle_love"
	    >
	    <ImageView 
	        android:id="@+id/iv_love_picture"
	        android:layout_width="320dp"
	        android:layout_height="200dp"
	        android:src="@drawable/sample" 
	        android:layout_centerInParent="true"
	        android:scaleType="fitCenter"
	        android:layout_alignLeft="@+id/iv_love_love"
	        android:layout_alignRight="@+id/iv_love_love"
	        android:layout_alignTop="@+id/iv_love_love"
	        android:layout_alignBottom="@+id/iv_love_love"/>

	     <ImageView
	         android:id="@+id/iv_love_love"
	         android:layout_width="320dp"
	         android:layout_height="200dp"
	         android:layout_centerInParent="true"
	         android:scaleType="fitCenter"
	         android:src="@drawable/four_love_pic" />
	    <com.wbw.widget.svg.CustomShapeImageView
	        android:id="@+id/csi_top_left"
	        android:layout_width="64dp" android:layout_height="64dp"
	          app:shape="circle"
            android:scaleType="centerCrop" android:src="@drawable/sample"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
	         />
	     <com.wbw.widget.svg.CustomShapeImageView
	          android:id="@+id/csi_top_right"
	        android:layout_width="64dp" android:layout_height="64dp"
	          app:shape="circle"
            android:scaleType="centerCrop" android:src="@drawable/sample"
                android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
	         />
	      <com.wbw.widget.svg.CustomShapeSquareImageView
	          android:id="@+id/csi_bottom_left"
	        android:layout_width="64dp" android:layout_height="64dp"
	          app:shape="svg" app:svg_raw_resource="@raw/shape_heart"
            android:scaleType="centerCrop" android:src="@drawable/sample"
                android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp"
	         />
	      <com.wbw.widget.svg.CustomShapeSquareImageView
	          android:id="@+id/csi_bottom_right"
	        android:layout_width="64dp" android:layout_height="64dp"
	          app:shape="svg" app:svg_raw_resource="@raw/shape_heart"
            android:scaleType="centerCrop" android:src="@drawable/sample"
                android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
	         />
	</RelativeLayout>
	<ImageView android:layout_width="320dp"
	    android:layout_height="60dp"
	    android:background="@color/love_pink"
	    android:src="@drawable/four_love_bg"
	    android:layout_gravity="center" />
	
	
	
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="80dp" android:orientation="horizontal"
	    android:layout_gravity="center" android:gravity="center">
	    <TextView 
	        android:id="@+id/tv_left_name"
	        android:layout_width="wrap_content" android:layout_height="wrap_content"
	        android:text="程序员" android:textStyle="bold" android:textSize="23sp"/>
	    <ImageView android:src="@drawable/ic" android:layout_width="64dp" android:layout_height="64dp"/>
	     <TextView
	         android:id="@+id/tv_right_name"
	          android:layout_width="wrap_content" android:layout_height="wrap_content"
	        android:text="程序员" android:textStyle="bold" android:textSize="23sp"/>
	</LinearLayout>
	
   <LinearLayout android:layout_width="match_parent"
	    android:layout_height="80dp" android:orientation="horizontal"
	    android:layout_gravity="center" android:gravity="center">
	     
	 <com.wbw.widget.shimmer.FlyTxtView  android:id="@+id/ftv_say_love1"  android:layout_width="match_parent" 
        android:layout_height="wrap_content" android:layout_gravity="center"
         />
       </LinearLayout>
    
</LinearLayout>
